<% content_for :body_content_title do %>
  <%= @fieldtrip.Name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @fieldtrip.Name %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @fieldtrip.Date %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @fieldtrip.Photo, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @fieldtrip.Description %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="fieldtrips">
      <% @fieldtrips.each do |fieldtrip| %>
        <li>
          <%= link_to fieldtrip.Name, fieldtrip_path(fieldtrip) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
